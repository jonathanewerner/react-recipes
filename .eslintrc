{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  // To give you an idea how to override rule options:
  "rules": {
    "quotes": [0],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "no-multi-spaces": [0],
    "no-unused-vars": [0]
  },
  "globals": {
    "React": true,
    "_": false,
    "Actions": true,
    "d": false,
    "h": false
  }
}
